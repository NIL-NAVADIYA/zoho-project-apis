{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "rootDir": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  }
}
